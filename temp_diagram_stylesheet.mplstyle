# Style settings for SWIFT SPH maps generated by sph_map.py

# Figure Settings
figure.figsize: 3.4, 3.0
figure.constrained_layout.use: True
figure.constrained_layout.h_pad: 0.005
figure.constrained_layout.w_pad: 0.005
figure.constrained_layout.hspace: 0.005
figure.constrained_layout.wspace: 0.005
#figure.dpi: 360

# Axis Ticks
xtick.direction: in
ytick.direction: in

# Colormap
image.cmap: viridis

savefig.dpi: 120
